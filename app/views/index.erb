<div class="container">
    <form action="/signup" method ="post">
      <h1> Enter your name </h1>
      <input type="text" name="sign_up[name]" placeholder="Name"><br><br>
      <%= show_errors_for(:name) %>
      <h1> Enter your email </h1>
      <input type="text" name="sign_up[email]" placeholder="Email"><br><br>
      <%= show_errors_for(:email) %>
      <h1> Choose your password! </h1>
      <input type="password" name="sign_up[password]" placeholder="Password"><br>
      <%= show_errors_for(:password) %>
      <br>
      <input type="submit">
    </form>
</div>
